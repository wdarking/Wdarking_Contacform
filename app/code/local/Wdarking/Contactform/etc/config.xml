<?xml version="1.0"?>
<config>
    <modules>
        <Wdarking_Contactform>
            <version>0.1.0</version>
        </Wdarking_Contactform>
    </modules>
    <default>
        <captcha>
            <frontend>
                <areas>
                    <contact_page_captcha>
                        <label>Wdarking Contact Page</label>
                    </contact_page_captcha>
                </areas>
            </frontend>
        </captcha>
    </default>
    <global>
        <models>
            <wdarking_contactform>
                <class>Wdarking_Contactform_Model</class>
            </wdarking_contactform>
        </models>
        <events>
            <controller_action_predispatch_contacts_index_post>
                <observers>
                    <captcha>
                        <type>model</type>
                        <class>wdarking_contactform/observer</class>
                        <method>checkContactPage</method>
                    </captcha>
                </observers>
            </controller_action_predispatch_contacts_index_post>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <wdarking_contactform>
                    <file>wdarking/contactform.xml</file>
                </wdarking_contactform>
            </updates>
        </layout>
    </frontend>
</config>
